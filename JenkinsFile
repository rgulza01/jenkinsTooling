pipeline {
        agent any
        stages {
            stage('First stage'){
                steps {
                    /* cleaning */
                    sh 'docker rm -f $(docker ps -a -q) || true'
                }
            }
            stage('Second stage'){
                steps {
                    /* building the app */
                    sh "docker build -t flaskapp ."
                }
            }
            stage('Third stage'){
                steps {
                    /* building the container / app */
                    sh "docker run -d -p 80:5500 --name ContainerName flaskapp"
                }
            }
        }
}
